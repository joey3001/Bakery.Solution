@{
  Layout = "_Layout";
}

@using Bakery.Models;
@model IEnumerable<Bakery.Models.Treat>

<h1>Treats</h1>

@if (Model.Any())
{
  <ul>
    @foreach (Treat treat in Model)
    {
      <li>@Html.ActionLink($"{treat.Description}", "Details", new { id = treat.TreatId })</li>
    }
  </ul>
} 
else
{
  <h3>No Treats have been added yet!</h3>
}

<p>@Html.ActionLink("Add new Treat", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>